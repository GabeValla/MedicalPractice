<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.MedicalPractice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Maui.MedicalPractice.Views"
    Shell.FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="{StaticResource Primary}"
    Title="Medical Practice">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource Primary}" 
              HeightRequest="150"
              Padding="20">
            <VerticalStackLayout VerticalOptions="Center">
                <Frame BackgroundColor="White"
                       CornerRadius="35"
                       WidthRequest="70"
                       HeightRequest="70"
                       Padding="0"
                       HasShadow="False"
                       HorizontalOptions="Start">
                    <Label Text="ðŸ¥"
                           FontSize="35"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>
                <Label Text="Medical Practice"
                       TextColor="White"
                       FontSize="20"
                       FontAttributes="Bold"
                       Margin="0,10,0,0" />
                <Label Text="Charting System"
                       TextColor="{StaticResource Secondary}"
                       FontSize="14" />
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Tab Bar with Flyout Items -->
    <FlyoutItem Title="Dashboard" Icon="home.png">
        <ShellContent 
            Title="Dashboard"
            ContentTemplate="{DataTemplate views:DashboardPage}"
            Route="Dashboard" />
    </FlyoutItem>

    <FlyoutItem Title="Patients" Icon="patients.png">
        <ShellContent 
            Title="Patients"
            ContentTemplate="{DataTemplate views:PatientsPage}"
            Route="Patients" />
    </FlyoutItem>

    <FlyoutItem Title="Physicians" Icon="physicians.png">
        <ShellContent 
            Title="Physicians"
            ContentTemplate="{DataTemplate views:PhysiciansPage}"
            Route="Physicians" />
    </FlyoutItem>

    <FlyoutItem Title="Appointments" Icon="appointments.png">
        <ShellContent 
            Title="Appointments"
            ContentTemplate="{DataTemplate views:AppointmentsPage}"
            Route="Appointments" />
    </FlyoutItem>

    <!-- Flyout Footer -->
    <Shell.FlyoutFooter>
        <Grid BackgroundColor="{StaticResource Tertiary}" 
              HeightRequest="50"
              Padding="20,0">
            <Label Text="Â© 2024 Medical Practice Manager"
                   TextColor="{StaticResource Secondary}"
                   FontSize="11"
                   VerticalOptions="Center" />
        </Grid>
    </Shell.FlyoutFooter>

    <!-- Shell Styles -->
    <Shell.Resources>
        <Style TargetType="FlyoutItem">
            <Setter Property="Shell.FlyoutItemIsVisible" Value="True" />
        </Style>
    </Shell.Resources>

</Shell>
