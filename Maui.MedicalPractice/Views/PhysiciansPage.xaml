<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maui.MedicalPractice.ViewModels"
             xmlns:models="clr-namespace:Maui.MedicalPractice.Models"
             x:Class="Maui.MedicalPractice.Views.PhysiciansPage"
             x:DataType="viewmodels:PhysiciansViewModel"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Command="{Binding AddPhysicianCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="10">
        
        <!-- Sort Picker -->
        <Frame Grid.Row="0" Padding="8" Margin="0,0,0,10" CornerRadius="8" HasShadow="False" 
               BackgroundColor="{StaticResource Gray600}">
            <HorizontalStackLayout Spacing="10">
                <Label Text="Sort:" VerticalOptions="Center" FontSize="14" TextColor="White" />
                <Picker ItemsSource="{Binding SortOptions}"
                        SelectedItem="{Binding SelectedSortOption}"
                        WidthRequest="180"
                        FontSize="14"
                        TextColor="White" />
            </HorizontalStackLayout>
        </Frame>

        <!-- Physicians List -->
        <RefreshView Grid.Row="1" IsRefreshing="{Binding IsBusy}" Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Physicians}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedPhysician}">
                
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                        <Label Text="No Physicians" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
                        <Label Text="Tap + to add a physician" FontSize="14" TextColor="{StaticResource Gray500}" 
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Physician">
                        <Border Margin="0,4" Padding="12" StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            
                            <Grid ColumnDefinitions="6,*,Auto" ColumnSpacing="12">
                                <!-- Color indicator -->
                                <BoxView Grid.Column="0" Color="{StaticResource Tertiary}" 
                                         WidthRequest="6" CornerRadius="3" />
                                
                                <!-- Physician Info -->
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="{Binding Name, StringFormat='Dr. {0}'}" FontSize="16" FontAttributes="Bold" />
                                    <Label Text="{Binding Specialization}" FontSize="13" TextColor="{StaticResource Primary}" />
                                    <Label FontSize="12" TextColor="{StaticResource Gray500}">
                                        <Label.Text>
                                            <MultiBinding StringFormat="License: {0} | {1} yrs exp">
                                                <Binding Path="LicenseNumber" />
                                                <Binding Path="YearsOfExperience" />
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>
                                </VerticalStackLayout>
                                
                                <!-- Inline Buttons -->
                                <HorizontalStackLayout Grid.Column="2" Spacing="8" VerticalOptions="Center">
                                    <Button Text="Edit" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PhysiciansViewModel}}, Path=EditPhysicianCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{StaticResource Tertiary}"
                                            TextColor="White"
                                            Padding="12,6"
                                            FontSize="12"
                                            CornerRadius="4" />
                                    <Button Text="Delete" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PhysiciansViewModel}}, Path=DeletePhysicianCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{StaticResource Error}"
                                            TextColor="White"
                                            Padding="12,6"
                                            FontSize="12"
                                            CornerRadius="4" />
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
