<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maui.MedicalPractice.ViewModels"
             xmlns:models="clr-namespace:Maui.MedicalPractice.Models"
             x:Class="Maui.MedicalPractice.Views.AppointmentsPage"
             x:DataType="viewmodels:AppointmentsViewModel"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="All" Command="{Binding ViewAllCommand}" />
        <ToolbarItem Text="+" Command="{Binding AddAppointmentCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">
        
        <!-- Date Picker -->
        <Border Grid.Row="0" Padding="10" Margin="0,0,0,8" StrokeThickness="0"
                BackgroundColor="{StaticResource Primary}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Date:" TextColor="White" VerticalOptions="Center" FontSize="14" />
                <DatePicker Date="{Binding SelectedDate}" TextColor="White" FontSize="14" />
            </HorizontalStackLayout>
        </Border>

        <!-- Sort Picker -->
        <Frame Grid.Row="1" Padding="8" Margin="0,0,0,8" CornerRadius="8" HasShadow="False" 
               BackgroundColor="{StaticResource Gray600}">
            <HorizontalStackLayout Spacing="10">
                <Label Text="Sort:" VerticalOptions="Center" FontSize="14" TextColor="White" />
                <Picker ItemsSource="{Binding SortOptions}"
                        SelectedItem="{Binding SelectedSortOption}"
                        WidthRequest="180"
                        FontSize="14"
                        TextColor="White" />
            </HorizontalStackLayout>
        </Frame>

        <!-- Appointments List -->
        <RefreshView Grid.Row="2" IsRefreshing="{Binding IsBusy}" Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Appointments}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedAppointment}">
                
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                        <Label Text="No Appointments" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
                        <Label Text="Tap + to schedule" FontSize="14" TextColor="{StaticResource Gray500}" 
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Appointment">
                        <Border Margin="0,4" Padding="12" StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            
                            <Grid ColumnDefinitions="6,Auto,*,Auto" ColumnSpacing="10" RowDefinitions="Auto,Auto,Auto">
                                <!-- Color indicator (Orange for today's appointments) -->
                                <BoxView Grid.Column="0" Grid.RowSpan="3" 
                                         Color="{Binding HighlightColor}" 
                                         WidthRequest="6" CornerRadius="3" />
                                
                                <!-- Time -->
                                <VerticalStackLayout Grid.Column="1" Grid.RowSpan="3" VerticalOptions="Center" 
                                                     WidthRequest="60">
                                    <Label Text="{Binding AppointmentTime, StringFormat='{0:hh\\:mm}'}"
                                           FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Primary}" />
                                    <Label Text="{Binding RoomDisplay}" FontSize="11" TextColor="{StaticResource Gray500}" />
                                </VerticalStackLayout>
                                
                                <!-- Appointment Info -->
                                <VerticalStackLayout Grid.Column="2" Grid.RowSpan="3" Spacing="2" VerticalOptions="Center">
                                    <Label Text="{Binding Patient.Name}" FontSize="15" FontAttributes="Bold" />
                                    <Label Text="{Binding Physician.DisplayInfo}" FontSize="12" 
                                           TextColor="{StaticResource Gray500}" />
                                    <HorizontalStackLayout Spacing="6">
                                        <!-- Status Badge -->
                                        <Border BackgroundColor="{Binding StatusColor}" Padding="6,2" 
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="4" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding StatusDisplay}" FontSize="10" TextColor="White" />
                                        </Border>
                                        <!-- Today indicator -->
                                        <Border BackgroundColor="Orange" Padding="6,2" StrokeThickness="0"
                                                IsVisible="{Binding IsToday}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="4" />
                                            </Border.StrokeShape>
                                            <Label Text="TODAY" FontSize="10" TextColor="White" />
                                        </Border>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                                
                                <!-- Inline Buttons -->
                                <VerticalStackLayout Grid.Column="3" Grid.RowSpan="3" Spacing="4" VerticalOptions="Center">
                                    <Button Text="Edit" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AppointmentsViewModel}}, Path=EditAppointmentCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="White"
                                            Padding="10,4"
                                            FontSize="11"
                                            CornerRadius="4" />
                                    <Button Text="Cancel" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AppointmentsViewModel}}, Path=CancelAppointmentCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{StaticResource Warning}"
                                            TextColor="Black"
                                            Padding="10,4"
                                            FontSize="11"
                                            CornerRadius="4" />
                                    <Button Text="Delete" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AppointmentsViewModel}}, Path=DeleteAppointmentCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{StaticResource Error}"
                                            TextColor="White"
                                            Padding="10,4"
                                            FontSize="11"
                                            CornerRadius="4" />
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
